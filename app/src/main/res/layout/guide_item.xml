<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/guideImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:paddingRight="10dp"
    />

    <TextView
        android:layout_toRightOf="@id/guideImage"
        android:layout_toEndOf="@id/guideImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:id="@+id/guideName"
    />

    <TextView
        android:id="@+id/guideDates"
        android:textSize="16sp"
        android:layout_toRightOf="@id/guideImage"
        android:layout_below="@id/guideName"
        android:layout_width="wrap_content"
        android:paddingBottom="5dp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/guideVenue"
        android:layout_below="@id/guideDates"
        android:layout_toRightOf="@id/guideImage"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:fontFamily="sans-serif-light"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
</RelativeLayout>